@model IEnumerable<Infrastructure.Entities.Movie>

<h2>Films</h2>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Description</p>
                    <p class="card-text"><small class="text-muted">Duration: @movie.DurationMinutes minutes</small></p>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>