@model Infrastructure.Entities.Movie
@using System.Globalization

@{
    string GetEmbedUrl(string url)
    {
        if (string.IsNullOrEmpty(url)) return "";

        // Handle youtube.com/watch?v= format
        if (url.Contains("youtube.com/watch?v="))
        {
            var videoId = url.Split("watch?v=").Last().Split('&').First();
            return $"https://www.youtube.com/embed/{videoId}";
        }
        // Handle youtu.be/ format
        else if (url.Contains("youtu.be/"))
        {
            var videoId = url.Split("youtu.be/").Last().Split('?').First();
            return $"https://www.youtube.com/embed/{videoId}";
        }

        return url;
    }
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" />
            }
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.DurationMinutes minutes</dd>

                <dt class="col-sm-3">Release Date</dt>
                <dd class="col-sm-9">@Model.ReleaseDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Rating</dt>
                <dd class="col-sm-9">@Model.Rating.ToString("0.0", CultureInfo.InvariantCulture)</dd>

                @if (Model.MovieGenres != null && Model.MovieGenres.Any())
                {
                    <dt class="col-sm-3">Genres</dt>
                    <dd class="col-sm-9">
                        @foreach (var movieGenre in Model.MovieGenres)
                        {
                            <span class="badge bg-primary me-1">@movieGenre.Genre.Name</span>
                        }
                    </dd>
                }

                @if (Model.MovieActors != null && Model.MovieActors.Any())
                {
                    <dt class="col-sm-12 mt-4">Cast</dt>
                    <dd class="col-sm-12">
                        <div class="row">
                            @foreach (var movieActor in Model.MovieActors)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100">
                                        @if (!string.IsNullOrEmpty(movieActor.Actor.PhotoUrl))
                                        {
                                            <img src="@movieActor.Actor.PhotoUrl" 
                                                 class="card-img-top" 
                                                 alt="@movieActor.Actor.Name"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" 
                                                 style="height: 200px;">
                                                <i class="fas fa-user fa-3x"></i>
                                            </div>
                                        }
                                        <div class="card-body text-center">
                                            <h6 class="card-title mb-0">@movieActor.Actor.Name</h6>
                                        </div>
                                        <div class="mt-3 text-center">
                                            <a asp-action="Details" asp-controller="Actor" asp-route-id="@movieActor.Actor.ActorId" asp-route-movieId="@Model.MovieId" class="btn btn-primary align-items-center justify-content-center">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </dd>
                }

                @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                {
                    <dt class="col-sm-12 mt-4">Trailer</dt>
                    <dd class="col-sm-12">
                        <div class="ratio ratio-16x9">
                            <iframe src="@GetEmbedUrl(Model.TrailerUrl)" 
                                    title="YouTube video player" 
                                    frameborder="0" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen>
                            </iframe>
                        </div>
                    </dd>
                }
            </dl>

            <h3 class="mt-4">Available Sessions</h3>
            
            @* Діагностична інформація *@
            <div class="alert alert-info">
                <p>Total sessions loaded: @(Model.Sessions?.Count ?? 0)</p>
                <p>Current time: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</p>
            </div>

            @if (Model.Sessions != null && Model.Sessions.Any())
            {
                var futureSessions = Model.Sessions
                    .Where(s => s.StartTime > DateTime.Now)
                    .OrderBy(s => s.StartTime)
                    .ToList();

                // Фільтруємо сеанси таким чином, щоб відображались лише ті, що мають активний зал
                var availableSessions = futureSessions
                    .Where(s => s.Hall != null &&
                                s.Hall.IsActive &&
                                (s.Tickets == null || s.Tickets.Count < s.Hall.Capacity))
                    .ToList();

                @if (futureSessions.Any())
                {
                    @if (availableSessions.Any())
                    {
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Hall</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in availableSessions)
                                {
                                    <tr>
                                        <td>@session.StartTime.ToString("dd.MM.yyyy")</td>
                                        <td>@session.StartTime.ToString("HH:mm")</td>
                                        <td>@session.EndTime.ToString("HH:mm")</td>
                                        <td>@(session.Hall?.Name ?? "N/A")</td>
                                        <td>@session.Price.ToString("C")</td>
                                        <td>
                                            <a asp-controller="Ticket" 
                                               asp-action="Book" 
                                               asp-route-sessionId="@session.SessionId" 
                                               class="btn btn-primary">
                                                Buy Ticket
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No available seats for current sessions.
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle"></i> All sessions for this movie have already passed.
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No sessions available for this movie at the moment.
                </div>
            }
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>