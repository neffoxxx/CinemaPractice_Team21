@model AppCore.DTOs.HallDTO

<div class="container">
    <h2>Edit Hall</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditHall" method="post">
                <input type="hidden" asp-for="HallId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" type="number" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RowsCount" class="form-label"></label>
                    <input asp-for="RowsCount" class="form-control" type="number" />
                    <span asp-validation-for="RowsCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SeatsPerRow" class="form-label"></label>
                    <input asp-for="SeatsPerRow" class="form-control" type="number" />
                    <span asp-validation-for="SeatsPerRow" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="ManageHalls" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 