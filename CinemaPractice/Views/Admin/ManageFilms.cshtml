@model IEnumerable<Infrastructure.Entities.Movie>

<h2>Manage Films</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="AddFilm" class="btn btn-primary">Add New Film</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration (min)</th>
            <th>Release Date</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.DurationMinutes</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.Rating</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="EditFilm" asp-route-id="@item.MovieId" class="btn btn-primary">Edit</a>
                        <form asp-action="DeleteFilm" asp-route-id="@item.MovieId" method="post"
                              style="display: inline-block;"
                              onsubmit="return confirm('Are you sure you want to delete this film?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>