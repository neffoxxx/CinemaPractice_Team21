@model SessionViewModel

<h2>Edit Session</h2>

<form asp-action="EditSession" method="post">
    <input type="hidden" asp-for="SessionId" />
    
    <div class="form-group mb-3">
        <label asp-for="MovieId" class="control-label">Movie</label>
        <select asp-for="MovieId" asp-items="Model.Movies" class="form-control">
            <option value="">Select Movie</option>
        </select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartTime" class="control-label">Start Time</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EndTime" class="control-label">End Time</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Hall" class="control-label">Hall</label>
        <input asp-for="Hall" class="form-control" />
        <span asp-validation-for="Hall" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="ManageSessions" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 