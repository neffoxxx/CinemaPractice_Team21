@model AppCore.DTOs.ActorDTO

<div class="container mt-4">
    <h2>@Model.Name</h2>
    <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-fluid" />
    <p>@Model.Bio</p>
    <h3>Фільми</h3>
    <ul>
        @if (Model.MovieActors != null && Model.MovieActors.Any())
        {
            @foreach (var movieActor in Model.MovieActors)
            {
                <li>@movieActor.Title</li>
            }
        }
        else
        {
            <li>Фільми не знайдено.</li>
        }
    </ul>
    <div class="mt-3">
        <a asp-action="Details" asp-controller="Film" asp-route-id="@ViewData["MovieId"]" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Повернутися до фільмів
        </a>
    </div>

</div> 