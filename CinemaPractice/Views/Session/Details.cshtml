@model Infrastructure.Entities.Session

<h2>Session Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@(Model.Movie?.Title ?? "N/A")</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Hall</dt>
            <dd class="col-sm-9">@(Model.Hall?.Name ?? "N/A")</dd>

            <dt class="col-sm-3">Start Time</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">End Time</dt>
            <dd class="col-sm-9">@Model.EndTime.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>